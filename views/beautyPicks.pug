            .row(style="height:60%;")
              -if(admin === true) {
                    
                    
              .col-12.col-6.col-md-6.col-lg-4.col-xl-3
                form(action="/addproduct" method="post" style="display: flex;flex-direction: column;height:100%;justify-content:space-around;")
